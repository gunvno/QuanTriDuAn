            } else {
                $('#SPHetHang').text('0');
            }
        },
        error: function (xhr, status, error) {
            console.error("AJAX error:", status, error); // Log lỗi nếu có
            $('#SPHetHang').text('Không thể lấy dữ liệu');
        }
    });


</script>
